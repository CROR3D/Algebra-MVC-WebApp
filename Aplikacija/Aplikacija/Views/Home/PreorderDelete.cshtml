@model Aplikacija.Preorders

@{
    ViewBag.Title = "PreorderDelete";
}

<div class="inner-container">
    @Html.ActionLink("Back", "ApprovePreorder", new { id = Model.Id } , new { @class = "btn btn-primary btn-md back-btn" })
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <h2>Are you sure you want to delete this preorder?</h2>
            <input type="submit" value="Delete" class="btn btn-danger btn-lg submit-btn" />
        </div>
    }
</div>
